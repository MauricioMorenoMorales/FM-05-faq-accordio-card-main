@import './_reset-styles.styl'
@import './_tokens.styl'

body
	font-family ffPrimary
	background linear-gradient(softViolet, softBlue)
	min-height 100vh
	padding 0 10px

main
	background-color white
	margin 0 auto
	margin-top spacingBig
	max-width 380px
	border-radius 20px
	box-shadow shadow
	padding 0 10px

.header
	position absolute
	margin-top -110px
	right 20px
	left 0
	margin-left auto
	margin-right auto
	width 266px
	height 220px
	&__main-illustration--wrapper
		background-image url('../images/bg-pattern-mobile.svg')
		background-repeat no-repeat
		background-size 90% 50%
		background-position bottom right
		height 210px
	&__box-illustration
		display none



.faq
	padding-top 100px
	padding-bottom 50px
	&__title
		text-align center
		font-size 4rem
		color veryDarkGrayishBlue
	&__item
		border-bottom 1px solid lighten(darkGrayishBlue, 50%)
		max-width 350px
		margin 0 auto
		cursor pointer
		transition .3s
		&:hover
			background-color darken(white, 3%)
		&__header
			display flex
			justify-content space-between
			align-items center
			color veryDarkGrayishBlue
			&.active
				font-weight fwBold
			&__arrow
				height 10px
				padding-right 10px
				&.active
					transform rotate(180deg)
		&__content
			color darkGrayishBlue
			display none
			padding-right 20px
			&__text
				margin 0 0 20px 0
			&.active
				display block

@media screen and (min-width 1000px)
	main
		display grid
		max-width 900px
		grid-template-columns 50% 50%
		grid-template-areas "image faq"
		padding-left 0

	.header
		position relative
		background-image url('../images/bg-pattern-desktop.svg')
		background-repeat no-repeat
		background-size 800px 800px
		background-position-x -400px
		background-position-y -250px
		grid-area image
		margin 0
		height 100%
		width auto
		padding-top 50px
		z-index 2
		&__main-illustration--wrapper
			overflow hidden
			background none
			height 350px
		&__main-illustration
			margin-left -50px
		&__box-illustration
			display block
			position absolute
			top 150px
			left -93px
	.faq
		grid-area faq
		padding-top 0
		&__item
			margin 0
			user-select none
			max-width 430px
		&__title
			text-align start
			margin-bottom 0
