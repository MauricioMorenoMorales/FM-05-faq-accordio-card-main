@import './_reset-styles.styl'
@import './_tokens.styl'

body
	font-family ffPrimary
	background linear-gradient(softViolet, softBlue)
	min-height 100vh

main
	background-color white
	margin 0 auto
	margin-top spacingBig
	max-width 370px
	border-radius 20px
	box-shadow shadow

.header
	position absolute
	margin-top -110px
	right 20px
	left 0
	margin-left auto
	margin-right auto
	width 266px
	height 220px
	background-image url('../images/bg-pattern-mobile.svg')
	background-repeat no-repeat
	background-size 90% 50%
	background-position bottom right



.faq
	padding-top 100px
	padding-bottom 50px
	&__title
		text-align center
		font-size 4rem
		color veryDarkGrayishBlue
	&__item
		border-bottom 1px solid lighten(darkGrayishBlue, 50%)
		max-width 350px
		margin 0 auto
		&__header
			display flex
			justify-content space-between
			align-items center
			color veryDarkGrayishBlue
			&.active
				font-weight fwBold
			&__arrow
				height 10px
				&.active
					transform rotate(180deg)
		&__content
			color darkGrayishBlue
			display none
			&__text
				margin 0 0 20px 0
			&.active
				display block