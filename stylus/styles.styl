@import './_reset-styles.styl'
@import './_tokens.styl'

body
	font-family ffPrimary
	background linear-gradient(softViolet, softBlue)
	min-height 100vh
	padding 0 10px

main
	background-color white
	margin 0 auto
	margin-top spacingBig
	max-width 380px
	border-radius 20px
	box-shadow shadow
	padding 0 10px

.header
	position absolute
	margin-top -110px
	right 20px
	left 0
	margin-left auto
	margin-right auto
	width 266px
	height 220px
	&--wrapper
		background-image url('../images/bg-pattern-mobile.svg')
		background-repeat no-repeat
		background-size 90% 50%
		background-position bottom right
	&__box-illustration
		display none



.faq
	padding-top 100px
	padding-bottom 50px
	&__title
		text-align center
		font-size 4rem
		color veryDarkGrayishBlue
	&__item
		border-bottom 1px solid lighten(darkGrayishBlue, 50%)
		max-width 350px
		margin 0 auto
		cursor pointer
		transition .3s
		&:hover
			background-color darken(white, 3%)
		&__header
			display flex
			justify-content space-between
			align-items center
			color veryDarkGrayishBlue
			&.active
				font-weight fwBold
			&__arrow
				height 10px
				&.active
					transform rotate(180deg)
		&__content
			color darkGrayishBlue
			display none
			&__text
				margin 0 0 20px 0
			&.active
				display block

@media screen and (min-width 1000px)
	main
		display grid
		max-width 800px
		grid-template-columns 50% 50%
		grid-template-areas "image faq"

	.header
		position relative
		grid-area image
		margin 0
		height 360px
		width auto
		margin-top 50px
		z-index 2
		&--wrapper
			overflow hidden
			background-size 90% 40%
			background-position-x -30px
			margin-left -10px
			height 350px
		&__main-illustration
			margin-left -50px
		&__box-illustration
			display block
			position absolute
			top 100px
			left -103px
	.faq
		grid-area faq
		padding-top 0
		&__item
			margin 0
			user-select none
		&__title
			text-align start
			margin-bottom 0
